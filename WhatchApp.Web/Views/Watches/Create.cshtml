@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 
@using WhatchApp.Web.Controllers
@model WhatchApp.Web.Models.Watch
<!DOCTYPE html>
    <html>
    <head>
        <title>Add watch</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
    </head>
    <body>
        <form asp-controller="Watches" asp-action="Create">
            <label asp-for="Name"></label>
            <input asp-for="Name"/>
            <span asp-validation-for="Name" style="color:red"></span>
            <br/>
            <label asp-for="Description" ></label>
            <input asp-for="Description" />
        <span asp-validation-for="Description" style="color:red"></span>
            <br />
            <label asp-for="Price" ></label>
            <input asp-for="Price" />
        <span asp-validation-for="Price" style="color:red"></span>
            <br />
            <label asp-for="ReferenceNumber" ></label>
            <input asp-for="ReferenceNumber" />
        <span asp-validation-for="ReferenceNumber" style="color:red"></span>
            <br />
            <input type="submit" value="Post"/>
            
        </form>
        <br/>
    <div asp-validation-summary="All" style="color:red"></div>
        <br/>
        <a asp-controller="Watches" asp-action="Index">[Home]</a>/>
    </body>
    </html>