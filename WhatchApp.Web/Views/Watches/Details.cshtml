@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WhatchApp.Web.Models.Watch

<!DOCTYPE html>
    <html>
    <head>
        <title>Details</title>        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@@latest/css/pico.classless.min.css">
    </head>
    <body>
        <h2>@Model.Name</h2>
        <p>Description: <i>@Model.Description</i></p>
        <p>Price: <i>@Model.Price $</i></p>
        <p>Ref: <i>@Model.ReferenceNumber</i></p>

        <a asp-controller="Watches" asp-action="Index" >[Home]</a>
    </body>
    </html>